<main class="container-fluid">
  <div class="row vh-100">
    <!-- Div da esquerda -->
    <div class="col-md-4 bg-dark text-white p-0">
      <div style="max-width: 300px; width: 100%; margin-top: 10rem; border: 2px solid yellow;" class="rounded p-4 shadow-sm mx-auto">
        <h2 class="text-center">Cadastro de Listas de Emails</h2>
        <p class="text-center"><strong>Aqui você cadastra uma lista de emails!</strong></p>
        <p class="text-center">Cadastre o nome e selecione os contatos para a lista de envio.</p>
      </div>
    </div>

    <!-- Div da direita fixa na tela e ocupa o espaço restante -->
    <div class="col-md-8 d-flex justify-content-center align-items-start" style="height: 100%; margin-top: 0rem;">
      <div style="max-width: 850px; width: 100%; border: 1px solid black; padding: 1rem; margin-top: 5rem;" class="rounded p-4 shadow-sm bg-light">
        <h1 class="text-center">Nova Lista</h1>

        <%= form_with(model: @email_list, local: true) do |form| %>
          <% if @email_list.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(@email_list.errors.count, "error") %> prohibited this email list from being saved:</h2>
              <ul>
                <% @email_list.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, "Nome", class: "form-label" %>
            <%= form.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :contacts, "Contatos", class: "form-label" %>
            <% if @contacts.present? %>
              <div class="contacts-container">
                <div class="contacts-header d-flex align-items-center">
                  <div class="header-item me-5">..</div>
                  <div class="header-item flex-grow-1">Nome</div>
                  <div class="header-item">Email</div>
                </div>
                <div class="contacts-list">
                  <%= form.collection_check_boxes :contact_ids, @contacts, :id, :name do |cb| %>
                    <div class="contact-item d-flex align-items-center mb-2">
                      <div class="form-check me-5">
                        <%= cb.check_box class: "form-check-input" %>
                      </div>
                      <div class="flex-grow-1">
                        <%= cb.label class: "form-check-label" %>
                      </div>
                      <div>
                        <small class="text-muted"><%= cb.object.email %></small>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% else %>
              <p>No contacts available.</p>
            <% end %>
          </div>

          <div class="d-flex justify-content-between mb-3">
            <%= form.submit 'Salvar', class: 'btn btn-primary' %>
            <%= link_to 'Voltar', email_lists_path, class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

<style>
    .contacts-container {
        max-height: 220px;
        overflow-y: auto;
        border: 1px solid #ced4da;
        border-radius: 5px;
        display: flex;
        flex-direction: column;
    }

    .contacts-header {
        background-color: #343a40;
        color: #fff;
        padding: 10px;
        border-bottom: 1px solid #ced4da;
        font-weight: bold;
        position: sticky; /* Fix the header to the top of the scrollable area */
        top: 0;
        z-index: 1; /* Ensure the header stays on top of the scrollable items */
    }

    .header-item {
        padding: 5px;
    }

    .contacts-list {
        flex-grow: 1;
    }

    .contact-item {
        background-color: #f8f9fa;
        border-bottom: 1px solid #ced4da;
        padding: 10px;
        border-radius: 0;
    }

    .contact-item:nth-child(even) {
        background-color: #e9ecef;
    }

    .contact-item .form-check {
        margin-right: 20px; /* Increased space between checkbox and name */
    }

    .contact-item .form-check-label {
        font-weight: bold;
    }

    .contact-item small {
        color: #6c757d;
    }

    .header-item.me-5 {
        margin-right: 20px; /* Increased space in header between checkbox and name */
    }

    .header-item.flex-grow-1 {
        flex-grow: 1; /* Make sure the name column takes the remaining space */
    }
</style>

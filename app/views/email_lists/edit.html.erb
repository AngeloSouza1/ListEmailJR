<h1><%= action_name.capitalize %> Email List</h1>

<%= form_with(model: @email_list, local: true) do |form| %>
  <% if @errors && @errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@errors.count, "error") %> prohibited this email list from being saved:</h2>
      <ul>
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

<!--  <div class="field">-->
    <%#= form.label :send_date %>
    <%#= form.date_field :send_date %>
<!--  </div>-->

  <div class="field">
    <%= form.label :contacts %>
    <div>
      <input type="checkbox" id="select_all_contacts" />
      <label for="select_all_contacts">Selecionar Todos</label>
    </div>
    <%= form.collection_check_boxes :contact_ids, @contacts, :id, :name do |cb| %>
      <div>
        <%= cb.check_box class: 'contact_checkbox' %>
        <%= cb.label %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit 'Salvar', id: 'submit_btn' %>
  </div>
<% end %>

<%= link_to 'Back', email_lists_path %>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.querySelector('form');
        const checkboxes = form.querySelectorAll('.contact_checkbox');
        const submitBtn = form.querySelector('#submit_btn');

        form.addEventListener('submit', function(event) {
            if (!hasCheckedCheckbox(checkboxes)) {
                event.preventDefault();
                alert('Selecione pelo menos um contato para atualizar a lista de emails.');
            }
        });

        function hasCheckedCheckbox(checkboxes) {
            for (let i = 0; i < checkboxes.length; i++) {
                if (checkboxes[i].checked) {
                    return true;
                }
            }
            return false;
        }
    });
</script>

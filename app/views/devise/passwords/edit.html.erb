<main class="d-flex justify-content-center align-items-center vh-100" style="background-color: #eaeafd;">
  <div class="form-container d-flex" style="flex: 1; max-width: 170%;">
    <div class="image-container" style="flex: 1;">
      <%= image_tag("cadeado.jpg", class: "background-image") %>
    </div>

    <div class="p-5" style="background-color: white; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1); flex: 3;">
      <h2 class="mb-4 text-center">Mude sua senha</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field mb-4">
          <%= f.label :password, "Nova Senha" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> m√≠nimo de caracteres)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control-custom" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password_confirmation, "Confirme a nova senha" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-custom" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Mudar minha senha", class: "btn btn-primary btn-gradient-blue" %>
        </div>
      <% end %>
     <br>
      <div class="text-center mb-4">
        <%= render "devise/shared_devise/links" %>
      </div>
      </div>
  </div>
</main>


<style>
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #eaeafd;
    }

    .image-container {
        background-size: cover;
        background-position: center;
        height: 100%;
    }

    .background-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
    }

    .p-5 {
        max-width: 60%;
        padding: 20px;
    }

    .form-control-custom {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-control-custom:focus {
        border-color: #6c757d;
        outline: none;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }


</style>

<style>

    .image-container {
        flex: 1;
        background-image: url('<%= asset_path("reg.jpg") %>'); /* Caminho para sua imagem */
        background-size: cover; /* Ajusta a imagem para cobrir o espaço */
        background-position: center center; /* Centraliza a imagem vertical e horizontalmente */
        height: 100vh; /* Garante que a altura seja de 100vh */
    }


    .form-container .form-control {
        background-color: rgba(255, 255, 255, 0.8); /* Fundo branco com 80% de opacidade */
        color: black; /* Texto preto */
    }

    .form-container .form-control:focus {
        background-color: white; /* Fundo branco ao focar */
        color: black; /* Texto preto ao focar */
    }

    .btn-gradient-blue {
        background: linear-gradient(to right, #4facfe, #00f2fe);
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
        transition: background 0.5s ease-in-out; /* Aumentar a duração do efeito de hover */
    }

    .btn-gradient-blue:hover {
        background: linear-gradient(to right, #00f2fe, #4facfe);
    }

</style>


<main class="d-flex justify-content-center align-items-center vh-100" style="background-color: #eaeafd;">


  <div class="image-container"></div>

  <div style= "flex: 4; max-width: 60%;">
    <form class="text-center bg-light p-5 rounded shadow" action="<%= registration_path(resource_name) %>" method="post" style="max-width: 350px; margin: 0 auto;">
      <h2 class="mb-4">Inscrever-se</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :email,"E-mail" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, "Senha" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="mb-4">
          <label for="user_password_confirmation" class="form-label text-start">Confirmação de Senha</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>


        <div class="actions">
          <%= f.submit "Inscrever-se", class: "btn btn-primary" %>
        </div>
        <p>
        <div class="actions">
          <%= link_to "Voltar para Login", new_session_path(resource_name), class: "back-to-login" %>
        </div>
      <% end %>
    </form>
  </div>
</main>

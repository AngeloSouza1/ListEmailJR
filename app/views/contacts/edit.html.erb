  <section class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div style="max-width: 400px; width: 100%;" class="rounded p-4 shadow-sm bg-light">
      <h1 class="text-center">Editar Contato</h1>

      <% if @contact.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

          <ul>
            <% @contact.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with(model: @contact, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= form.submit "Salvar", class: "btn btn-primary mt-3 d-block w-100" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to 'Voltar', contacts_path, class: "btn btn-outline-secondary mt-3 d-block w-100" %>
      </div>


<div class="container-fluid">
  <div class="row vh-100">
    <div class="col-md-4 bg-dark text-white p-0">
      <div style="max-width: 300px; width: 100%; margin-top: 10rem; border: 2px solid yellow;" class="rounded p-4 shadow-sm mx-auto">
        <h2 class="text-center">Contato incluso!</h2>
        <p class="text-center">Aqui você verifica seu contato, já incluso para utilizar na sua lista de emails!</p>
        </div>
    </div>
    <div class="col-md-8 d-flex justify-content-center align-items-center" style="height: 100vh;">
      <section class="d-flex justify-content-center align-items-center" style="width: 100%;">
        <div style="max-width: 400px; width: 100%; border: 2px solid black;" class="rounded p-4 shadow-sm bg-light">
          <h1 class="text-center">Contato</h1>

          <% if @contact.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

              <ul>
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <label class="form-label"><strong>Nome:</strong></label>
            <p><%= @contact.name %></p>
          </div>

          <div class="mb-3">
            <label class="form-label"><strong>Email:</strong></label>
            <p><%= @contact.email %></p>
          </div>

          <div class="d-grid gap-2">
            <%= link_to 'Editar', edit_contact_path(@contact), class: "btn btn-primary btn-block rounded-pill" %>
            <%= link_to 'Voltar', contacts_path, class: "btn btn-outline-secondary mt-3 d-block w-100" %>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
